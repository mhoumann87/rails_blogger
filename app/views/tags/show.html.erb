<h1>Articles Tagged with <%= @tag.name %></h1>

<ul>
  <% @tag.articles.each do |article| %>
    <li>
      <%= link_to article.title, article_path(article) %>
      <%= link_to "Delete tag", tag_path(@tag), method: :delete, data: {confirm: "Do You really want to delete this Tag?"} %>
      </li>
  <% end %>
</ul>